<div class="row">
    <div class="col-md-8">
        <nav id="main-nav" class="navbar navbar-default" role="navigation">
            <div class="navbar-header visible-xs">
                <div class="main-logo text-center">
                    <a href="/index.html" aria-label="Go to homepage">
                        <img src="/static/img/wpata-logo.png" alt="Whose Points Are They Anyway?"/>
                    </a>
                </div>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#tgl-mn">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand">Navigation</span>
            </div>
            <div class="collapse navbar-collapse" id="tgl-mn">
                <ul class="nav navbar-nav">
                    <li{% if activePage == 'home' %} class="active"{% endif %}>
                        <a href="/index.html"><span class="glyphicon glyphicon-home"></span> Home</a>
                    </li>
                    <li{% if activePage == 'alltime' %} class="active"{% endif %}>
                        <a href="/alltime.html">
                            <span class="glyphicon glyphicon-stats"></span> Alltime Stats</a>
                    </li>
                    <li class="dropdown{% if activePage == 'season' %} active{% endif %}">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-stats"></span>
                            Season Stats
                            <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            {% for season in seasons %}
                                <li>
                                    <a href="/seasons/{{ season.id }}.html">
                                        <strong>Season {{ season.prettyId }}</strong> ({{ season.episodes|length }} Episodes)
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                    <li{% if activePage == 'kisses' %} class="active"{% endif %}>
                        <a href="/kisses.html">
                            <span class="glyphicon glyphicon-heart-empty"></span> Who Kissed Who?
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="main-logo col-md-4 hidden-xs text-center">
        <a href="/index.html">
            <img src="/static/img/wpata-logo.png" alt="Whose Points Are They Anyway?"/>
        </a>
    </div>
</div>
